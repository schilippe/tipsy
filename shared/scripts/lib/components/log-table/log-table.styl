table
  td:not(:first-child)
    max-width 150px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

> table
  margin-top 14px

  th
    font-size 80%

  td
    text-overflow ellipsis
    white-space nowrap

    .relative
      position relative

    a
      color #333333

      &:hover
        color #6B6B6B

  tr
    cursor pointer

    &.has-author
      td
        background-color #F0FFF1 !important

      &:hover, &.active
        td
          background-color #DEFCD2

        .favicon
          opacity 1

    &.no-author
      &:hover, &.active
        td
          background-color #FCE6D2

        .favicon
          opacity 1

      td
        background-color #FFF7F0


.favicon
  width 24px
  height 24px
  position absolute
  left -48px
  top -3px
  opacity 0.5

i.missing.favicon
  background url("data:image/png;base64,")

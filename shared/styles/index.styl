@import "nib"
@import url(https://fonts.googleapis.com/css?family=Sansita\+One)
@import url(../node_modules/purecss/tables.css)
@import url(../node_modules/purecss/buttons.css)
@import url(../node_modules/purecss/forms.css)

// Pages.
#getting-started
  @import '../scripts/lib/pages/getting-started/getting-started.styl'
#log
  @import '../scripts/lib/pages/log/log.styl'
#settings
  @import '../scripts/lib/pages/settings/settings.styl'
#donations
  @import '../scripts/lib/pages/donations/donations.styl'

// Components.
log-table
  display block
  @import '../scripts/lib/components/log-table/log-table.styl'
set-donation-goal
  display block
  @import '../scripts/lib/components/donation-goal/donation-goal.styl'
set-threshold-goal
  display block
  @import '../scripts/lib/components/threshold-goal/threshold-goal.styl'
set-reminders
  display block
  @import '../scripts/lib/components/reminders/reminders.styl'

html, body
  box-sizing border-box
  padding 0
  margin 0
  font-family Helvetica, Arial, sans-serif
  font-size 100%
  background-color #FFF
  width 100%
  height 100%
  position relative
  overflow-x hidden

  &.intro
    background-color #FFF
    overflow hidden

    nav
      display none

h2
  color #A9A89A

table
  width 100%

nav 
  border-bottom 1px solid #EFEFEF
  background #FFF9B8
  position relative
  padding 0 15%
  z-index 1
  user-select none

  h1
    display inline-block
    margin-left 75px
    margin-right 20px
    font-family 'Sansita One', sans-serif
    color #655D4D

    &:before
      background url(../img/logo48.png)
      content ''
      width 48px
      height 48px
      position absolute
      top 12px
      left 15%

    sub
      color #939393
      font-size 70%

  a
    display inline-block
    color #666
    text-decoration none
    padding 10px
    font-size 80%

    &.disabled
      display none

    &.active, &:hover
      color #000
      background #FFF
      border-bottom 2px solid #CCC

hr
  outline none
  border none
  border-bottom 1px solid #EFEFEF

section
  display none
  padding 0 15%
  padding-top 15px

:target
  display block
  position relative
  top -111px
  z-index 0

  // There is always a single top level element per page to ensure proper
  // padding.
  > *
    padding-top 96px

fieldset
  border none
  padding-top 2px
  padding-bottom 30px

  &:not(:last-child)
    border-bottom 1px solid #CCC
